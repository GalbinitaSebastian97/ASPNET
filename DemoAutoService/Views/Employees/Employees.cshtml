
@model List<DatabaseClassLibrary.EmployeesDatabase.IEmployeeModel>

@{
    ViewData["Title"] = "Employees List";
}


<body>
    <div class="container">

        <br /><br />
        <div class="row">
            <div class="col-6 col-md">
                <div class="form-group">
                    <h2>Manage <b>Employees</b></h2>
                </div>
                <form asp-action="SearchBarMethod">



                    <input id="SearchBarEmployee" name="SearchBarEmployee" placeholder="Search by Name" class="form-control" type="text" aria-label="Search" required>



                </form>
                <br />
            </div>


            <div class="col-6 col-md">
                <br /><br />
                <div class="form-group" style="position:relative;">
                    <a href="#addEmployeeModal" class="btn btn-primary" style="float:right; " data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Employee</span></a>
                </div>

            </div>


        </div>



        @{ if (Model.Count == 0)
            {
                <div style="margin-left: auto; margin-right: auto; text-align: center;">
                    <h1>No  matches found ! </h1>
                </div>


            }

            else
            {

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>

                            <th>Birth Day</th>
                            <th>Qualification</th>
                            <th>First Day</th>
                            <th>  </th>

                        </tr>
                    </thead>



                    @{int i = 0;

                        foreach (DatabaseClassLibrary.EmployeesDatabase.IEmployeeModel individ in Model)
                        {
                            <tr>
                                <td>
                                    <span>@(++i)</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => individ.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => individ.BirthDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(Model => individ.Qualification)
                                </td>
                                <th>
                                    @Html.DisplayFor(Model => individ.FirstDay)
                                </th>
                                <td>

                                    <a asp-action="EditEmployeeButton" title="Edit" asp-route-id="@individ.ID" class="btn btn-primary">Edit </a>
                                    <a class="btn btn-danger" value="Delete" asp-action="DeleteEmployeeButton" title="Delete" asp-route-id="@individ.ID" onclick="return confirm('Are you sure you wish to delete this ?');">Delete</a>
                                </td>
                            </tr>
                        }
                    }



                </table>
            }

            <div style=" margin-left: auto; margin-right: auto; text-align: center; font-style:italic;">

                <h3 style="color:dimgray"> No more </h3>

            </div>


        }




        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

    </div>

    <style>
        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-color:#ffcccc;
            color: white;
            cursor: pointer;
            padding: 15px;
            border-radius: 4px;
        }

            #myBtn:hover {
                background-color: #ff4d4d;
            }
    </style>



    <button onclick="topFunction()" id="myBtn" title="Go to top">Up</button>

    


    <script>
        //Get the button
        var mybutton = document.getElementById("myBtn");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>












    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="AddNewEmployeeSubmitButton">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Employee</h4>

                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input name="FullNameInput" id="FullNameInput" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Birth Day</label>
                            <input name="BirthDayInput" id="BirthDayInput" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Qualification</label>
                            <input name="QualificationInput" class="form-control" type="text" required>
                        </div>
                        <div class="form-group">
                            <label>First Day</label>
                            <input name="FirstDayInput" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" asp-action="AddNewEmployeeSubmitButton">
                    </div>
                </form>
            </div>
        </div>
    </div>



</body>
