    <!-- Edit Modal HTML -->
    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="AddNewEmployeeSubmitButton">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Employee</h4>

                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input name="FullNameInput" id="FullNameInput" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Birth Day</label>
                            <input name="BirthDayInput" id="BirthDayInput" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Qualification</label>
                            <input name="QualificationInput" class="form-control" type="text" required>
                        </div>
                        <div class="form-group">
                            <label>First Day</label>
                            <input name="FirstDayInput" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" asp-action="AddNewEmployeeSubmitButton">
                    </div>
                </form>
            </div>
        </div>
    </div>
